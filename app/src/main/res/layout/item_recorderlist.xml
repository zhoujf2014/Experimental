<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_recorderliest_position"
        style="@style/RecorderList"
        android:gravity="center_vertical|right"
        android:layout_width="@dimen/x60"/>

    <TextView
        android:id="@+id/item_recorderliest_data"
        style="@style/RecorderList"/>

    <TextView
        android:id="@+id/item_recorderliest_time"
        style="@style/RecorderList"
        />

    <TextView
        android:id="@+id/item_recorderliest_length"
        android:layout_width="@dimen/x180"
        style="@style/RecorderList"/>

    <TextView
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/delect"
        android:id="@+id/item_recorderliest_delect"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        style="@style/RecorderList"/>

</LinearLayout>