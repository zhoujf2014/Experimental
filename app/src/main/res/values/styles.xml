<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/x20</item>
        <item name="android:layout_margin">@dimen/x8</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x40</item>

    </style>

    <style name="Title_back">
        <item name="android:layout_width">@dimen/x70</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">@dimen/y70</item>
        <item name="android:layout_marginTop">@dimen/y16</item>
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:src">@drawable/selector_back</item>

    </style>

    <style name="Main_TextView_Sys">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>

    <style name="Main_ImageView_Sys">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/x70</item>
        <item name="android:layout_height">@dimen/y70</item>
    </style>

    <style name="Main_Linearlayout_Sys">
        <item name="android:layout_margin">@dimen/x20</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:padding">@dimen/x12</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/x120</item>
        <item name="android:layout_height">@dimen/y120</item>
    </style>

    <style name="Appliances_RadioButton">

        <item name="android:background">@drawable/text_color_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:padding">@dimen/x19</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/x20</item>

    </style>

    <style name="Safe_Text">
        <item name="android:padding">@dimen/x20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

    <style name="Safe_Text_State" parent="Safe_Text">
        <item name="android:layout_width">@dimen/x100</item>
        <item name="android:padding">@dimen/x10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#078707</item>

        <item name="android:layout_marginRight">@dimen/x10</item>


    </style>

    <style name="Menjin_Text_State" parent="Safe_Text_State">
        <item name="android:layout_height">@dimen/x60</item>
        <item name="android:layout_width">@dimen/x250</item>
        <item name="android:padding">@dimen/x10</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x35</item>
        <item name="android:layout_margin">@dimen/x20</item>
        <item name="android:background">@drawable/btn_white_selector</item>

    </style>
    <!--
          Base application theme, dependent on API level. This theme is replaced
          by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
      -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <style name="RecorderList">
        <item name="android:layout_width">@dimen/x250</item>
        <item name="android:layout_height">@dimen/x60</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

    <style name="UserderList" parent="RecorderList">
        <item name="android:layout_width">@dimen/x150</item>
        <item name="android:background">@drawable/tab</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

</resources>
